{
  "name": "webapp",
  "type": "module",

  "scripts": {
    "dev": "vite dev",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "vite build --mode production",
    "pages:build": "NODE_VERSION=18 npm ci && npm run build",
    "preview": "wrangler pages dev dist",
    "deploy": "wrangler pages deploy dist",
    "deploy:prod": "wrangler pages deploy dist --project-name wow-campus-platform",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply wow-campus-platform-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply wow-campus-platform-db --remote",
    "db:seed": "wrangler d1 execute wow-campus-platform-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1/ && npm run db:migrate:local && npm run db:seed",
    "db:shell": "wrangler d1 execute wow-campus-platform-db --local"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
